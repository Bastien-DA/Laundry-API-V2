{
  "extends": "./tsconfig.json",
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "paths": {
    "@/*": ["src/*"],
    "@core/*": ["src/core/*"],
    "@features/*": ["src/features/*"],
    "@fixtures/*": ["src/fixtures/*"],
    "@shared/*": ["src/shared/*"]
  },
  "plugins": [
    {
      "name": "@nestjs/swagger/plugin"
    }
  ]
}
